<%- include('partials/header'); -%>

    <h1> Home </h1>
    <p> <%= home %> </p>
    

    <% posts.forEach(post => { %>
       <h1> <%=post.title%> </h1> 

       <% if(post.content.length > 50) { %> 
        <% post.content = post.content.substring(0, 50) + " ..." %> 
        <p> <%=post.content%><a href="/posts/<%=post.title%>">Readmore</a> </p> 

        <% } else { %>
        <p> <%=post.content%> </p>
        <%  %> 
       <% } %>

       
    <% }); %>
  
 
